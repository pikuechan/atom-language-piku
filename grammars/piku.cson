'name': 'Piku'
'scopeName': 'source.piku'
'fileTypes': [
  'txt',
  'piku'
]
'patterns': [
  #URI
  {
    'match': '([^\\s:：]*?:\/\/[^\\s]*)'
    'name': 'entity.uri.piku'
  }
  #Email
  {
    'match': '([^\\s:：]*?@[^\\s]*)'
    'name': 'entity.email.piku'
  }
  #アスタリスク
  {
    'match': '(\\t*?[※\*].*)'
    'name': 'comment.note.piku'
  }
  #シャープ
  {
    'match': '(\\t*?#.*)'
    'name': 'comment.line.piku'
  }
  #丸カッコ
  {
    'match': '([（\(].*?[\)）])'
    'name': 'markup.comment.block.piku'
  }
  #タイトル三角
  {
    'match': '(\\t*?[▼❤︎].*)'
    'name': 'markup.heading.title1.piku'
  }
  #タイトルカッコ１
  {
    'match': '(＜.*?＞)'
    'name': 'markup.heading.title2.piku'
  }
  #タイトルカッコ２
  {
    'match': '([【].*?[\】])'
    'name': 'markup.heading.title3.piku'
  }
  #タイトルカッコ３
  {
    'match': '(\\[.*?\\])'
    'name': 'markup.heading.title5.piku'
  }
  #タイトルポイント
  {
    'match': '(\\t*?●.*)'
    'name': 'markup.heading.title4.piku'
  }
  #リスト用数字
  {
    'match': '([０-９0-9]+[\.．][^ 　]*)'
    'name': 'markup.list.numbered.piku'
  }
  #時間用数字
  {
    'match': '([0-9]+[\:][^ 　]*)'
    'name': 'entity.time.piku'
  }
  #日付用数字
  {
    'match': '([0-9]+[\/][^ 　]*)'
    'name': 'entity.date.piku'
  }
  #コロン
  #{
  #  'match': '([^\\s]*?[^\\s]*?[:：])'
  #  'name': 'markup.heading.list.piku'
  #}
  #半角コロン
  {
    'match': '([^\\s]*?[^\\s]*?[：])'
    'name': 'markup.heading.list.piku'
  }
  #星目印
  {
    'match': '([^\\s]*?[★])'
    'name': 'markup.star.piku'
  }
  #矢印
  {
    'match': '([^\\s]*?[→])'
    'name': 'markup.arrow.piku'
  }
]
